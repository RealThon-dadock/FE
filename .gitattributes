# Auto detect text files and perform LF normalization
* text=auto

# JSX files
*.jsx text eol=lf
*.js text eol=lf

# JSON files
*.json text eol=lf

# CSS files
*.css text eol=lf

# HTML files
*.html text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Package files
package.json text eol=lf
yarn.lock text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
